{
  "manifest_version": 3,
  "name": "Oko - Browser Automation for Ona",
  "version": "0.2.0",
  "description": "Browser automation tools for Ona development environments",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab",
    "alarms",
    "debugger",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Oko",
    "default_popup": "popup.html"
  },
  "commands": {
    "toggle-picker": {
      "suggested_key": {
        "default": "Alt+Shift+O",
        "mac": "Alt+Shift+O"
      },
      "description": "Toggle element picker"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["picker.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
