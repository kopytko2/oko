{
  "name": "oko-extension",
  "version": "0.1.0",
  "description": "Oko Chrome extension for browser automation",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write 'background/**/*.ts' 'lib/**/*.ts' 'components/**/*.tsx'",
    "format:check": "prettier --check 'background/**/*.ts' 'lib/**/*.ts' 'components/**/*.tsx'",
    "typecheck": "tsc --noEmit",
    "check": "npm run typecheck && npm run lint && npm run format:check"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript-eslint": "^8.50.1",
    "typescript": "^5.5.3",
    "vite": "^7.3.0"
  }
}
